*{
  margin: 0px;
}
body{
  background-image: url(img/4.jpg);
  background-repeat: no-repeat;
  background-size: 100%;
}
#header{
    width:1000px;
	  height:160px;
   /* border: 1px solid red;*/
    margin-left: 160px;

}
#header img{
  opacity: 0.5;

}
#parent{
   width:300px;
   height: 42px;
   float: right;
  /* border: 1px solid blue;*/

  }
      #parent .search{
         width: 240px;
         height: 40px;
         border: 1px solid #ccc;
         font-size: 16px;
         float: left;
         margin-top:20px; 
         
      }
      #parent .search:focus {
        border: 1px solid blue;
      }

      #parent .btn {
        /*button按钮border并不占据外围大小，设置高度42px*/
        width: 60px;
        height: 43px; 
        position: absolute;
        background: #A9A9A9;
        border: 1px solid #A9A9A9;
        color: #fff;
        font-size: 20px;
        outline: none;
        margin-top:20px;
      }
      .text{
         font-size: 20px;
         font-style: italic;
         width: 300px;
         height: 45px;
         float: right;
         margin-top:-60px;
         font-weight: bold;
      }
#navi{
   width:100%;
   height:40px;
